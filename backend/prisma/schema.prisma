generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model losts {
  lost_id     Int      @id @default(autoincrement())
  name        String
  category    String
  when_found  DateTime
  where_found String
  state       String // 유실물의 현재 상태
  province    String // 유실물을 관리하고 있는 지점
  is_created  DateTime @default(now())
}

model subscription {
  subscription_id Int       @id @default(autoincrement())
  email           String    @unique
  name            String
  category        String?
  startDt         DateTime?
  province        String?
  // 인증 정보
  is_authorized   Boolean   @default(false)
}

model authorization_code {
  auth_id     Int      @id @default(autoincrement())
  // 인증 코드
  code        String
  // 만료 시간 (절대시간)
  when_expire DateTime
}
